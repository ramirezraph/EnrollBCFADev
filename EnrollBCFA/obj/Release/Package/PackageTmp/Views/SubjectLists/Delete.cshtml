@model EnrollBCFA.Models.SubjectList

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="view-section">
    <div class="subject-header">
        <h3 id="lblSubject">Delete Subject</h3>
    </div>
    <div class="subject-container" style="color: lightgray; padding-left: 3%;">
            <h3 class="text-danger">Are you sure you want to delete this subject?</h3>
            <br />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.SubjectCode):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SubjectCode)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.SubjectName):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SubjectName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SubjectType):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SubjectType)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SubjectTeacher):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SubjectTeacher)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" value="Delete" class="btn btn-danger btnSaveEdit" style="margin-left: 19%;" />
                        </div>
                        <div class="col-md-12">
                            <a href="@Url.Action("Index", "SubjectLists")" class="btnBackToList">&#8592; Back to list</a>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>