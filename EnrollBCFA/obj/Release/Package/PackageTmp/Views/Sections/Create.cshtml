@model EnrollBCFA.Models.tblSection

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="view-section">
    <div class="section-header">
        <h3 id="lblSection">Add New Sections</h3>
    </div>
    <div class="section-container">
        <br />
        <div class="row">
            <div class="col-md-12">
                <label class="text-danger" style="margin-left: 17.5%;">@Html.DisplayFor(model => model.CreateMessage)</label>
            </div>
        </div>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.SectionName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SectionName, new { htmlAttributes = new { @class = "form-control" } })
                        <label style="font-size: 14px; font-weight:normal; color: indianred;">(unique)</label><br />
                        @Html.ValidationMessageFor(model => model.SectionName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SType, new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Elementary", Value="Elementary" },
                            new SelectListItem { Text = "High School", Value="High School" }
                        }, "- select type -", new { @class = "DropDownMenu", @id = "typesectioncreate" })
                        @Html.ValidationMessageFor(model => model.SType, "", new { @class = "text-danger", @id = "studenttypesection" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GradeLevel, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.GradeLevel, new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Grade-1", Value="Grade-1" },
                            new SelectListItem { Text = "Grade-2", Value="Grade-2" },
                            new SelectListItem { Text = "Grade-3", Value="Grade-3" },
                            new SelectListItem { Text = "Grade-4", Value="Grade-4" },
                            new SelectListItem { Text = "Grade-5", Value="Grade-5" },
                            new SelectListItem { Text = "Grade-6", Value="Grade-6" },
                            new SelectListItem { Text = "Grade-7", Value="Grade-7" },
                            new SelectListItem { Text = "Grade-8", Value="Grade-8" },
                            new SelectListItem { Text = "Grade-9", Value="Grade-9" },
                            new SelectListItem { Text = "Grade-10", Value="Grade-10" },
                        }, "- select level -", new { @class = "DropDownMenu" })
                        @Html.ValidationMessageFor(model => model.GradeLevel, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SectionAdviser, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                       @Html.DropDownListFor(model => model.SectionAdviser, null, null, new { @class = "DropDownMenu" })
                        @Html.ValidationMessageFor(model => model.SectionAdviser, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add Teacher" class="btn btn-success btnSaveEditSection" />
                    </div>
                </div>
            </div>
        }

        <div>
            <a href="@Url.Action("Index", "Sections")" class="btnBackToList">&#8592; Back to list</a>
        </div>
    </div>
</div>


