@model EnrollBCFA.Models.SubjectList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="view-section">
    <div class="subject-header">
        <h3 id="lblSubject">Add New Subject</h3>
    </div>
    <div class="subject-container">
        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                <br /><br />
                <div class="row">
                    <div class="col-md-12">
                        <label class="text-danger" style="margin-left: 17.5%;">@Html.DisplayFor(model => model.CreateMessage)</label>
                    </div>
                </div>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectCode, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SubjectCode, new { htmlAttributes = new { @class = "form-control" } })
                        <label style="font-size: 14px; font-weight:normal; color: indianred;">(unique)</label><br />
                        @Html.ValidationMessageFor(model => model.SubjectCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SubjectType, new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Elementary", Value="Elementary" },
                            new SelectListItem { Text = "High School", Value="High School" }
                        }, "- select subject type -", new { @class = "DropDownMenu" } )
                        @Html.ValidationMessageFor(model => model.SubjectType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectTeacher, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SubjectTeacher, null, null, new { @class = "DropDownMenu" })
                        @Html.ValidationMessageFor(model => model.SubjectTeacher, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add Subject" class="btn btn-success btnSaveEdit" />
                    </div>
                </div>
            </div>
        }

        <div>
            <a href="@Url.Action("Index", "SubjectLists")" class="btnBackToList">&#8592; Back to list</a>
        </div>
    </div>
</div>