@model EnrollBCFA.Models.Teacher

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="view-section">
    <div class="teacher-header">
        <h3 id="lblTeacher">Delete Teacher</h3>
    </div>
    <div class="teacher-container" style="color: lightgray; padding-left: 3%;">
        <h3 class="text-danger">Are you sure you want to delete this?</h3>
        <div>
            <br />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.TeacherID):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TeacherID)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TeacherName):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TeacherName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TeacherAddress):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TeacherAddress)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TeacherContact):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TeacherContact)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" value="Yes, please delete." class="btn btn-danger btnSaveEdit" style="margin-left: 19%;" />
                        </div>
                        <div class="col-md-12">
                            <a href="@Url.Action("Index", "Teachers")" class="btnBackToList">&#8592; Back to list</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

